def modifierCarte(carte,dim,coordonnees) : ## carte c'est un matrice, dim ses dimensions, et les coordonnees sont cartesiennes
    x,y = coordonnees
    xMax, yMax = dim[1]//2, dim[0]
    if x >= -xMax and x <= xMax and y<= yMax :
        carte[math.ceil(y),math.ceil(x)+xMax] = 1


def cartographier(amax,apas,dim) :  ## on donne des dim, et il cree un tableau des alentours Ensuite il met 1 a chaque fois qu'il y a un obstacle
    iterable = np.linspace(-amax,amax,apas)
    carte = np.zeros(dim[0],dim[1])
    for i in iterable :
        servo.value = i
        modifierCarte(carte,dim,polaireEnCartesien(distance(), angleBizarreEnRadians(i)))
       
    return carte 
